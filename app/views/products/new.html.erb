<h1>Add a new product here</h1>

<% categories = Category.all.map { |c| c.title } %>

<%= simple_form_for [@product] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :category, collection: [categories]%>
  <%= f.input :amount %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
